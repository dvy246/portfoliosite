{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client", "react", "react-dom"]         // ← allow import.meta.env and React types
  },
  "include": [
    "src",
    "vite-env.d.ts"                  // ← reference your new file
  ],
  "exclude": ["node_modules", "dist"]
}
